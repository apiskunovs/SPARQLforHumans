@inherits AutoCompleteBase

<div class="input-group">
    <div class="input-group-prepend">
        <span class="input-group-text">Search</span>
    </div>

    <input placeholder="@PlaceHolder"
           class="form-control"
           autofocus
           oninput="(this.dispatchEvent(new CustomEvent('change', { bubbles: true })))"
           bind="@InputQuery" />
</div>

@if (QueryResults != null && WaitingSelection)
{
    <ul class="list-group" style="max-height: 300px; overflow: auto;" tabindex="0">
        @foreach (var entity in QueryResults)
        {
            <li class="list-group-item list-group-item-action" tabindex="-1">
                <button onclick="@(e => OnEntitySelected(entity))" style="all: unset">
                    (@entity.Id) - @entity.Label
                </button>
            </li>
        }
    </ul>
}


